extends ../shared/layout
block main-content
    .container
        h1 Cart
        br
        table.table.table-stripped.table-hover
            thead
            tr
                th Category
                th Name
                th Price
                th
            tbody
                each book in cart
                    tr
                        td= book.category
                        td= book.name
                        td= book.price
                        td
                            a(class='btn',href='/cart/remove?itemId=' + book.id) Remove From Cart
                tr
                    td Total:
                    td
                    td= cart.total
                    td
                        a.btn.btn-primary.pull-right Checkout
