extends ../shared/layout
block main-content
   form(method="post")
      label(for="bookname") Username
      input(id="bookname" class="form-control" type="text" name="bookname" placeholder="Book name")
      br
      label(for="description") Description
      input(id="description" class="form-control" type="text" name="description" placeholder="Description")
      br
      label(for="price") Price
      input(id="price" class="form-control" type="text" name="price" placeholder="Price")
      br
      label(for="contact") Contact(GSM)
      input(id="contact" class="form-control" type="text" name="contact" placeholder="Contact")
      br
      input(type="submit" class="btn btn-lg" value="Add New Book")