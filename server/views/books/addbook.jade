extends ../shared/layout
block main-content
   .container(ng-controller='BooksCreateController as vm')
      div(class='col-md-8 col-md-offset-2')
         form(class='form-horizontal' name='addBook')
            fieldset
               legend
                  | Add book
               .form-group
                  label(class='col-md-2 control-label', for='category')
                     | Category
                  .col-md-10
                     select(class='form-control', id='category', ng-model='book.category' ng-required='true')
                        option Crime
                        option Drama
                        option Fantasy
                        option Thriller
               .form-group
                  label(class='col-md-2 control-label', for='name')
                     | Name
                  .col-md-10
                     input(type='text', class='form-control', placeholder='Name', id='name', ng-model='book.name' ng-required='true')
               .form-group
                  label(class='col-md-2 control-label', for='description')
                     | Description
                  .col-md-10
                     textarea(class='form-control', rows='3', id='description', ng-model='book.description' ng-required='true')
               .form-group
                  label(class='col-md-2 control-label', for='price')
                     | Price
                  .col-md-10
                     input(type='number', class='form-control', placeholder='Price', id='price', ng-model='book.price' ng-required='true')
               .form-group
                  label(class='col-md-2 control-label', for='image')
                     | Image
                  .col-md-10
                     input(type='text', class='form-control', placeholder='Image', id='image', ng-model='book.image')
               div(class='form-group' ng-show='book.image')
                  .col-md-6.col-md-offset-3
                     img(src='{{book.image}}')
               .form-group
                  div(class='col-md-10 col-md-offset-2')
                     button(class='btn btn-primary', type='reset') Cancel
                     button(class='btn btn-primary', ng-click='vm.createBook(book)' ng-disabled="addBook.$invalid") Submit