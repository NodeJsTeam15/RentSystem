extends ../shared/layout
block main-content
    .container
        div(class='col-md-8 col-md-offset-2')
            form(class='form-horizontal' action="/login" method="post" name="login")
                fieldset
                    legend
                        | Login
                    .form-group
                        label(class='col-md-2 control-label', for='username')
                            | Username
                        .col-md-10
                            input(type='text', class='form-control', placeholder='Username', id='username', name="username" )
                    .form-group
                        label(class='col-md-2 control-label', for='password')
                            | Password
                        .col-md-10
                            input(type='password', class='form-control', placeholder='Password', id='password', name="password")
                    .form-group
                        div(class='col-md-10 col-md-offset-2 pull-left')
                            input(type="submit" class="btn btn-lg" value="Login")