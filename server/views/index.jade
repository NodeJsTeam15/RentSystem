extends shared/layout
block main-content
    h1(class="jumbotron text-center") Welcome to Book Rent System
    table.table
        thead.thead-default
            tr
                th Category
                th Name
                th Price
                th
        tbody
            each book in books
                tr
                    td= book.category
                    if (currentUser)
                        td
                            a(href="books/" + book._id)= book.bookname
                    else
                        td= book.bookname
                    td= book.price
                    td
                        a(class='btn btn-sm',href='/cart/add?itemId='+book.id) Add To Cart
